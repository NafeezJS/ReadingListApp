<% include partials/header %>
   <div class="ui main text container">
   	<div class="ui huge header">Books List</div>
    <div class="ui top attached segment">
<div class="ui divided items">
	<% books.forEach(function(book){ %>
	 <div class="item">
	    <div class="image">
	      <img src="<%= book.image %>">
	    </div>
	    <div class="content">
	      <a class="header"><%= book.title %></a>
	      <div class="meta">
	        <span class="cinema"><%= book.date.toDateString() %></span>
	      </div>
	      <div class="description">
	        <p><%= book.body %></p>
	      </div>
	      <div class="extra">
	        <a href="/books/<%=book._id %>" class="ui floated basic violet button">
	          Read More
	          <i class="right chevron icon"></i>
	        </a>
	      </div>
	    </div>
	  </div>
	<% }); %>
</div>
</div>
    
  </div>
<% include partials/footer %>

 
